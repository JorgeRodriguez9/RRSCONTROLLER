@{
    ViewData["Title"] = "Product Register";
}

<div class="text-center">
    <img src="~/images/RRS-Controller.jpeg" alt="Mi imagen" style="width: 55%;" />
</div>
<br />
<br />
<form asp-controller="AdminPae" asp-action="ProductRegister" method="post">
    <div class="form-group">
        <label for="name" class="font-weight-bold text-center">Name:</label>
        <input type="text" name="name" class="form-control col-5 mx-auto" />
    </div>
    <div class="form-group">
        <label for="supplierId" class="font-weight-bold text-center">Supplier:</label>
        <select name="supplierId" class="form-control col-5 mx-auto">
            <option value="">Select a supplier</option>
            @if (ViewBag.supplier != null)
            {
                @foreach (var item in ViewBag.supplier)
                {
                    <option value="@item.Text">@item.Text</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label for="unitId" class="font-weight-bold text-center">Unit:</label>
        <select name="unitId" class="form-control col-5 mx-auto">
            <option value="">Select a unit</option>
            @if (ViewBag.unit != null)
            {
                @for (int i = 0; i < ViewBag.unit.Count; i++)
                {
                    <option value="@ViewBag.unit[i].Text">@ViewBag.unit[i].Text</option>
                }
            }
        </select>
    </div>
    <br />
    <button type="submit" class="btn btn-primary mx-auto d-block">Register</button>
</form>
<br />
<br />
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}