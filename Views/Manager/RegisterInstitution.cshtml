@model RRSCONTROLLER.Models.INSTITUTION
@{
    ViewData["Title"] = "Register Institution";
}

<div class="text-center">
    <img src="~/images/RRS-Controller.jpeg" alt="Mi imagen" style="width: 55%;" />
</div>
<br />
<br />
<form asp-controller="Manager" asp-action="RegisterInstitution" method="post">
    <div class="form-group">
        <label for="name" class="font-weight-bold text-center">Name:</label>
        <input type="text" name="name" class="form-control col-5 mx-auto" />
    </div>
    <div class="form-group">
        <label for="adress" class="font-weight-bold text-center">Adress:</label>
        <input type="text" name="adress" class="form-control col-5 mx-auto" />
    </div>
    <div class="form-group">
        <label for="numberPhone" class="font-weight-bold text-center">Number Phone:</label>
        <input type="text" name="numberPhone" class="form-control col-5 mx-auto" />
    </div>
    <div class="form-group">
        <label for="email" class="font-weight-bold text-center">E-mail:</label>
        <input type="text" name="email" class="form-control col-5 mx-auto" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary mx-auto d-block">Register</button>
</form>
<br />
<br />
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}