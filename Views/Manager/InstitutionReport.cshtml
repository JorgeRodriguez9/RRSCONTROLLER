

<div class="top_Title">

    @{
        ViewData["Title"] = "Reporte Institucion";
    }

</div>

<!--<div class = "text-white">-->
<h3>@ViewData["Title"] </h3>
<!--</div>-->

<div class="text-center">
    <img src="~/images/RRS-Controller.jpeg" alt="Mi imagen" />
</div>

<div class="container-fluid no-padding-left marginE box-Report">
    <div class="row row-custom">
        <div class="col-md-6 col-custom align-items-center d-flex flex-column box-column" id="checkbox-container">
            <div class="MenuD text-center header-row">Menu</div>
            <hr>
            @for (int i = 0; i < ViewBag.Menu.Count; i++)
            {
                <div class="MenuD text-center">@ViewBag.Menu[i].Text</div>
                <hr>
            }
        </div>
        <div class="col-md-6 col-custom align-items-center d-flex flex-column box-column" id="checkbox-container">
            <div class="MenuD text-center header-row">Amount</div>
            <hr>
            @for (int i = 0; i < ViewBag.Amount.Count; i++)
            {
                <div class="MenuD text-center">@ViewBag.Amount[i].Text</div>
                <hr>
            }
        </div>
    </div>
    
</div>
<div class="row">
    <div class="col-md-6">
        <!-- Aquí va el código de la tabla -->
    </div>
    <div class="col-md-6" id="request-container">
        <p>Evaluacion</p>
    </div>
    <div class="border-boxInfo">
        <label for="info">Información:</label>
        <input type="text" id="info" name="info" value="@Model.Informacion" readonly />
    </div>
</div>
