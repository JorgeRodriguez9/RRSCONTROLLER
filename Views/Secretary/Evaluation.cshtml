<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<div class="top_Title">

    @{
        ViewData["Title"] = "Evaluacion";
    }

</div>

<!--<div class = "text-white">-->
<h6>@ViewData["Title"] </h6>
<!--</div>-->

<div class="text-center">
    <img src="~/images/RRS-Controller.jpeg" alt="My Image" />
</div>

<div class="row justify-content-center marginP">
    <div class="col-md-6">
        <h4 class="text-right">¿El pedido fue recibido?</h4>
    </div>
    <div class="col-md-6">
        <form method="post" action="/Respuestas">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="¿El pedido fue recibido?" id="respuesta1" value="Si">
                <label class="form-check-label" for="respuesta1">
                    Si
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="¿El pedido fue recibido?" id="respuesta2" value="No">
                <label class="form-check-label" for="respuesta2">
                    No
                </label>
            </div>
        </form>
    </div>
</div>

<hr>

<div class="row justify-content-center marginP">
    <div class="col-md-6">
        <h4 class="text-right">Cantidad correcta</h4>
    </div>
    <div class="col-md-6">
        <form method="post" action="/Respuestas">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="Cantidad correcta" id="respuesta3" value="Si">
                <label class="form-check-label" for="respuesta3">
                    Si
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="Cantidad correcta" id="respuesta4" value="No">
                <label class="form-check-label" for="respuesta4">
                    No
                </label>
            </div>
        </form>
    </div>
</div>

<hr>

<div class="row justify-content-center marginP">
    <div class="col-md-6">
        <h4 class="text-right">Estado de los productos</h4>
    </div>
    <div class="col-md-6">
        <form method="post" action="/Respuestas">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="Estado de los productos" id="respuesta5" value="Buen estado">
                <label class="form-check-label" for="respuesta5">
                    Buen estado
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="Estado de los productos" id="respuesta6" value="Regular">
                <label class="form-check-label" for="respuesta6">
                    Regular
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="Estado de los productos" id="respuesta7" value="Mal estado">
                <label class="form-check-label" for="respuesta7">
                    Mal estado
                </label>
            </div>

            <div class=" marginP ml-3">
                <label for="fecha">Fecha:</label>
                <input type="text" id="fecha" name="fecha">
            </div>

            <div class="my-2 d-flex">
                <button type="submit" class="btn btn-primary">Enviar respuestas</button>
            </div>
        </form>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script>
    flatpickr("#fecha", {
        dateFormat: "d-m-Y",
        minDate: "today",
        maxDate: new Date().fp_incr(60),
        enable: [
            {
                from: "today",
                to: new Date().fp_incr(60),
            },
        ],
        clickOpens: true, // Permite abrir el calendario al hacer clic en el campo de entrada
        locale: {
            firstDayOfWeek: 1, // Lunes como primer día de la semana
            weekdays: {
                shorthand: ["Dom", "Lun", "Mar", "Mie", "Jue", "Vie", "Sab"],
                longhand: ["Domingo", "Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado"],
            },
            months: {
                shorthand: [
                    "Ene",
                    "Feb",
                    "Mar",
                    "Abr",
                    "May",
                    "Jun",
                    "Jul",
                    "Ago",
                    "Sep",
                    "Oct",
                    "Nov",
                    "Dic",
                ],
                longhand: [
                    "Enero",
                    "Febrero",
                    "Marzo",
                    "Abril",
                    "Mayo",
                    "Junio",
                    "Julio",
                    "Agosto",
                    "Septiembre",
                    "Octubre",
                    "Noviembre",
                    "Diciembre",
                ],
            },
        },
    });
</script>
