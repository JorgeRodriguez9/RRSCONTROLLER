<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<div class="top_Title">

    @{
        ViewData["Title"] = "Evaluacion";
    }

</div>

<!--<div class = "text-white">-->
<h6>@ViewData["Title"] </h6>
<!--</div>-->

<div class="text-center">
    <img src="~/images/RRS-Controller.jpeg" alt="My Image" />
</div>
<form asp-action="Evaluation" asp-controller="Secretary" method="post">
    <div class="row justify-content-center marginP">
        <div class="col-md-6">
            <h4 class="text-right">¿El pedido fue recibido?</h4>
        </div>
        <div class="col-md-6">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="shipment" id="answer1" value="Si">
                    <label class="form-check-label" for="answer1">
                        Si
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="shipment" id="answer2" value="No">
                    <label class="form-check-label" for="answer2">
                        No
                    </label>
                </div>
        </div>
    </div>

    <hr>

    <div class="row justify-content-center marginP">
        <div class="col-md-6">
            <h4 class="text-right">Cantidad correcta</h4>
        </div>
        <div class="col-md-6">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="quantity" id="amswer3" value="Si">
                    <label class="form-check-label" for="answer3">
                        Si
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="quantity" id="answer4" value="No">
                    <label class="form-check-label" for="answer4">
                        No
                    </label>
                </div>
        </div>
    </div>

    <hr>

    <div class="row justify-content-center marginP">
        <div class="col-md-6">
            <h4 class="text-right">Estado de los productos</h4>
        </div>
        <div class="col-md-6">
        
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="products" id="answer5" value="Buen estado">
                    <label class="form-check-label" for="answer5">
                        Buen estado
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="products" id="answer6" value="Regular">
                    <label class="form-check-label" for="answer6">
                        Regular
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="products" id="answer7" value="Mal estado">
                    <label class="form-check-label" for="answer7">
                        Mal estado
                    </label>
                </div>

                <div class=" marginP ml-3">
                    <label for="date">Fecha Recibido:</label>
                    <input type="text" id="date" name="date">
                </div>
                <input type="hidden" name="id" value="@ViewBag.id">
                <div class="my-2 d-flex">
                    <button type="submit" class="btn btn-primary">Enviar respuestas</button>
                </div>
       
        </div>

    </div>
 </form>


<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script>
    flatpickr("#date", {
        dateFormat: "d-m-Y",
        minDate: "today",
        maxDate: new Date().fp_incr(60),
        enable: [
            {
                from: "today",
                to: new Date().fp_incr(60),
            },
        ],
        clickOpens: true, // Permite abrir el calendario al hacer clic en el campo de entrada
        locale: {
            firstDayOfWeek: 1, // Lunes como primer día de la semana
            weekdays: {
                shorthand: ["Dom", "Lun", "Mar", "Mie", "Jue", "Vie", "Sab"],
                longhand: ["Domingo", "Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado"],
            },
            months: {
                shorthand: [
                    "Ene",
                    "Feb",
                    "Mar",
                    "Abr",
                    "May",
                    "Jun",
                    "Jul",
                    "Ago",
                    "Sep",
                    "Oct",
                    "Nov",
                    "Dic",
                ],
                longhand: [
                    "Enero",
                    "Febrero",
                    "Marzo",
                    "Abril",
                    "Mayo",
                    "Junio",
                    "Julio",
                    "Agosto",
                    "Septiembre",
                    "Octubre",
                    "Noviembre",
                    "Diciembre",
                ],
            },
        },
    });
</script>
