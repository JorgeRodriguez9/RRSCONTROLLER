

<div class="top_Title">

    @{
        ViewData["Title"] = "Register Food";
    }

</div>

<!--<div class = "text-white">-->
<h3>@ViewData["Title"] </h3>
<!--</div>-->

<div class="text-center">
    <img src="~/images/RRS-Controller.jpeg" alt="Mi imagen" />
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="boxTitle">
                <div class="foodTitle">@ViewBag.name</div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-5 d-flex">
            <div class="box">
                @for (int i = 0; i < ViewBag.Food.Count; i++)
                {
                    <div class="food">@ViewBag.Food[i]</div>
                    <div class="amount">@ViewBag.Amount[i] @ViewBag.unit[i]</div>
                    <hr>
                }  
            </div>
         </div>
        <div class="col-md-6 margin">
            <button type="submit" class="btn btn-light btn-lg" name="createRegister">CREATE</button>
        </div>
        </div>
    </div>
</div>

